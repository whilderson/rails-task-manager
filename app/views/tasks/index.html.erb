<h1>My tasks</h1>
<hr>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <i class="far fa-trash-alt"></i>
    </li>
  <% end %>
</ul>
<hr>
<p><%= link_to "Create task", new_task_path, :class => "btn btn-primary" %></p>
